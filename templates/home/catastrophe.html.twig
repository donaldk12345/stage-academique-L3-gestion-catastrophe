{% extends 'base.html.twig' %}

{% block title %}Gestion des Catastrophes!{% endblock %}

{% block body %}
<style>
 
</style>

<div class="main-wrapper">
   {% include "partials/_header.html.twig" %}
   
   {% include "partials/_sidebar.html.twig" %}

<div class="page-wrapper mt-4">
 
<div class="row">
<div class="col-md-11 d-flex m-auto">

<div class="card card-table flex-fill">
<div class="card-header">
<h4 class="card-title float-start">Liste des Catastrophes</h4>
</div>
<div class="card-body">
<div class="table-responsive no-radius">
<table class="table table-hover table-center">
<thead>
<tr>
<th>Catastrophe Id</th>
<th>nom</th>
<th class="text-center">Categroie</th>
<th class="text-center">Sous Categorie</th>
<th class="text-end">Actions</th>
</tr>
</thead>
<tbody>

{% for catastrophe in catastrophes %}
    
<tr>
<td class="text-nowrap">
<div class="font-weight-600">  {{ catastrophe.id}} </div>
</td>
<td class="text-nowrap">  {{ catastrophe.nomCatastrophe }} </td>
<td class="text-center"> {{  catastrophe.categorie.nom }} </td>
<td class="text-center">
  {{  catastrophe.SousCategorie.nom }}
</td>
<td class="text-end">
<div class="actions">
<a href="{{ path('catastrophes_edit', {'id': catastrophe.id}) }}" class="btn btn-sm bg-success-light me-2">
<i class="fas fa-pencil"></i>
</a>
 <a href="{{ path('view' , {'slug': catastrophe.slug } )}}" class="btn btn-sm bg-primary-light">
<i class="fas fa-eye"></i>
 </a>
</div>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>
</div>
</div>

</div>
</div>
</div>
</div>

</div>


{% endblock %}
