{% extends 'base.html.twig' %}

{% block title %}Gestion des Catastrophes!{% endblock %}

{% block body %}
<style>
 .pagina{
  margin-left:15px;
  margin-bottom:20px;
  display:flex;
  justify-content:center;
  align-items:center;
}
.page-item.active .page-link{
  background-color:#218C74!important;
  border:none;
  color:#fff!important;
}
.page-link{
  color:#218C74!important;
  outline:none!important;
}
</style>

<div class="main-wrapper">
   {% include "partials/_header.html.twig" %}
   
   {% include "partials/_sidebar.html.twig" %}

<div class="page-wrapper mt-4">
 
<div class="row">
<div class="col-md-11 d-flex m-auto">

<div class="card card-table flex-fill">
<div class="card-header text-center m-auto">
<h4 class="card-title float-start text-center text-muted text-uppercase">Liste des Catastrophes</h4>
</div>
<div class="card-body">
<div class="table-responsive no-radius">
<table class="table table-hover table-center">
<thead>
<tr>
<th class="text-center">Id catastrophe</th>
<th class="text-center">Nom du catastrophe</th>
<th class="text-center">Catastrophe publier par </th>

<th class="text-center">Sous Categorie</th>
<th class="text-end">Actions</th>
</tr>
</thead>
<tbody>

{% for catastrophe in catastrophes %}
    
<tr>
<td class="text-nowrap">
<div class="font-weight-600">  {{ catastrophe.id}} </div>
</td>
<td class="text-nowrap">  {{ catastrophe.nomCatastrophe| u.truncate(25 ,'...') }} </td>
<td class="text-center">
  {{  catastrophe.catastrophe.email }}
</td>
<td class="text-center">
  {{  catastrophe.SousCategorie.nom }}
</td>
<td class="text-end">
<div class="actions">
<a href="{{ path('catastrophes_edit', {'id': catastrophe.id}) }}" class="btn btn-sm bg-success-light me-2">
<i class="fas fa-pencil"></i>
</a>
 <a href="{{ path('view' , {'slug': catastrophe.slug } )}}" class="btn btn-sm bg-primary-light">
<i class="fas fa-eye"></i>
 </a>
</div>
</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>
</div>
</div>

</div>
 <div class="pagina mt-3">
          <div class="pagination">
          {{ knp_pagination_render(catastrophes) }}
              </div>
     </div>
</div>
</div>
</div>

</div>


{% endblock %}
