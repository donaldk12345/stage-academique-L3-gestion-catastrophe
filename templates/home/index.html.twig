{% extends 'base.html.twig' %}

{% block title %}Gestion des Catastrophes!{% endblock %}

{% block body %}
<style>
 
</style>

<div class="main-wrapper">
   {% include "partials/_header.html.twig" %}
   
   {% include "partials/_sidebar.html.twig" %}

<div class="page-wrapper mt-4">
  {% if is_granted('ROLE_ADMIN') %}
  {% include "partials/_data_size.html.twig" %}

    {% endif %}
<div class="row mb-5 justify-content-center">

    <div class="text-center mt-3 col-md text-muted text-uppercase"><h3>Liste des catastrophes publier</h3></div>
<div class="col-md-11  m-auto pb-4">
        <div class="row m-auto justify-content-center">
     
        {% for catastrophe in catastrophees %}
               
                  <div class="card text-center" style="width:18rem; margin:5px!important;">
                    <div class="card-header"> {{ catastrophe.SousCategorie.nom }} </div>
                    <div class="card-body mt-0">
                      <h5 class="card-title">{{ catastrophe.nomCatastrophe }}</h5>
                      <p class="card-text">{{ catastrophe.description| u.truncate(55 ,'...') }}</p>
                      <a href="{{ path('view' , {'slug': catastrophe.slug } )}}" class="btn btn-sm bg-success-light me-2">Plus de Details ...</a>
                      <div class=" text-muted mt-3">{{ catastrophe.createdAt | ago (locale='fr') }}</div>
                    </div>
                    
                  </div>
       {% endfor %}
         </div>
       
     
</div>
</div>
</div>

</div>


{% endblock %}
